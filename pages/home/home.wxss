.home {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.navs {
  width: 100%;
  height: 100rpx;
  display: flex;
}

.nav-item {
  flex: 1;
  height: 98rpx;
  border-bottom: 2rpx solid #aaa;
  text-align: center;
  line-height: 98rpx;
  color: #cdcdcd;
  font-size: 40rpx;
  font-weight: 600;
}

.navs .nav-active0 {
  background-color: #7e5509;
  color: #fff;
  border-radius: 10px 10px 0 0;
}
.navs .nav-active1 {
  background-color: #201c1c;
  color: #fff;
  border-radius: 10px 10px 0 0;
}
.navs .nav-active2 {
  background-color: #113370;
  color: #fff;
  border-radius: 10px 10px 0 0;
}
.navs .nav-active3 {
  background-color: #cf3014;
  color: #fff;
  border-radius: 10px 10px 0 0;
}
