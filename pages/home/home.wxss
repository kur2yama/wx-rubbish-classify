  background-color: #201c1c;
  color: #fff;
  border-radius: 10px 10px 0 0;
}
.navs .nav-active2 {
  background-color: #113370;
  color: #fff;
  border-radius: 10px 10px 0 0;
}
.navs .nav-active3 {
  background-color: #cf3014;
  color: #fff;
  border-radius: 10px 10px 0 0;
}
