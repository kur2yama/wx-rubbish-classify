.navs {
  width: 20%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
}

.nav-item {
 
  flex: 1;
  height: 98rpx;
  border-bottom: 2rpx solid #aaa;
  text-align: center;
  line-height: 98rpx;
  color: #cdcdcd;
  font-size: 30rpx;
  font-weight: 600;
  z-index: 9999;
  background-color: #fff;

}

.navs .nav-active0 {
  background-color: #7e5509;
  color: #fff;
  border-radius: 10px 10px 0 0;
}
